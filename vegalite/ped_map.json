                "title": "2019 Average"
              },
              {
                "field": "Normalised",
                "aggregate": "mean",
                "title": "Normalised value"
              },
              {
                "field": "Year",
                "type": "ordinal"
              },
              {
                "field": "Month",
                "type": "ordinal"
              },
              {
                "field": "Mdate",
                "type": "nominal",
                "title": "Date"
              },
              {
