                "format": {
                  "type": "topojson",
                  "feature": "lineMap"
                }
              },
              "mark": {
                "type": "geoshape",
                "color": "rgb(226,237,246)",
                "strokeWidth": 22,
                "filled": false
              }
            },
            {
              "selection": {
                "Location": {
                  "type": "single",
                  "fields": [
                    "Location"
                  ],
                  "on": "click",
                  "empty": "all"
                }
              },
              "transform": [
                {
                  "filter": {
                    "selection": "Date"
                  }
                },
                {
                  "filter": "datum.Year == 2020"
                },
                {
                  "filter": {
                    "selection": "Hour"
                  }
                }
              ],
              "mark": {
                "type": "circle",
                "opacity": 1,
                "stroke": "white"
              },
              "encoding": {
                "longitude": {
                  "field": "longitude",
                  "type": "quantitative"
                },
                "latitude": {
                  "field": "latitude",
                  "type": "quantitative"
                },
                "color": {
                  "condition": {
                    "selection": "Location",
                    "field": "Normalised",
                    "type": "quantitative",
                    "scale": {
                      "scheme": "reds"
                    }
                  },
                  "value": "grey"
                },
                "size": {
                  "condition": {
                    "selection": "Location",
                    "value": 200
                  },
                  "value": 100
                },
                "tooltip": [
                  {
                    "field": "Location"
                  },
                  {
                    "field": "Day"
                  },
                  {
                    "field": "Year"
                  },
                  {
                    "field": "Normalised"
                  },
                  {
                    "field": "Count"
                  }
                ]
              }
            },
            {
              "transform": [
                {
                  "filter": {
                    "selection": "Date"
                  }
                },
                {
                  "filter": "datum.Year == 2020"
                },
                {
                  "filter": {
                    "selection": "Hour"
                  }
                },
                {
                  "filter": "datum.Location == 'The Arts Centre' || datum.Location == 'Melbourne Central' || datum.Location == 'Southbank' || datum.Location == 'Bourke St Bridge' || datum.Location == 'Collins St (North)' || datum.Location == 'Collins Place (North)' || datum.Location == 'Southern Cross Station' || datum.Location == 'Princes Bridge' || datum.Location == 'Melbourne Convention Exhibition Centre' || datum.Location == 'Swanston St - RMIT Building 14'"
                },
                {
                  "filter": {
                    "selection": "Location"
                  }
                }
              ],
              "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "color": "black",
                "dx": 10,
                "dy": -3,
                "fontSize": 7
              },
              "encoding": {
                "text": {
                  "field": "Location",
                  "type": "nominal"
                },
                "latitude": {
                  "field": "latitude",
                  "type": "quantitative"
                },
                "longitude": {
                  "field": "longitude",
                  "type": "quantitative"
                },
                "tooltip": [
                  {
                    "field": "Location"
                  },
                  {
                    "field": "Day"
                  },
                  {
                    "field": "Year"
                  },
                  {
                    "field": "Normalised",
                    "title": "test"
                  },
                  {
                    "field": "Count"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "layer": [
        {
          "width": 800,
          "title": {
            "text": "Hourly Pedestrian Count",
            "subtitle": "By sensor location (Melbourne CBD)",
            "subtitleFontSize": 10
          },
          "transform": [
            {
              "filter": {
                "selection": "Date"
              }
            },
            {
              "filter": {
                "selection": "Location"
              }
            }
          ],
          "mark": {
            "type": "line",
            "strokeWidth": 4
          },
          "encoding": {
            "x": {
              "field": "Hour",
              "type": "ordinal",
              "axis": {
                "tickBand": "extent"
              }
            },
            "y": {
              "aggregate": "sum",
              "field": "Count",
              "type": "quantitative",
              "axis": {
                "title": "Total Pedestrians"
              }
            },
            "color": {
              "field": "Year",
              "scale": {
                "range": [
                  "#de2d26",
                  "#fc9272",
                  "#d1d1d1"
                ]
              }
            },
            "opacity": {
              "value": 0.95
            },
            "tooltip": [
              {
                "field": "Count",
                "aggregate": "sum",
                "title": "Total Pedestrians"
              },
              {
                "field": "day_hour_mean",
