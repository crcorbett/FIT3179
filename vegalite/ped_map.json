{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/crcorbett/FIT3179/master/data/ped_data.json"
  },
  "title": {
    "text": "Pedestrian Traffic",
    "fontSize": 25,
    "subtitle": [
      "Scale normalised to 2019 pedestrian traffic",
      "Melbourne CBD"
    ],
    "align": "center",
    "dx": 450,
    "dy": -30
  },
  "vconcat": [
    {
      "hconcat": [
        {
          "layer": [
            {
              "title": {
                "text": "July 2019",
                "subtitle": "",
                "fontStyle": "italic",
                "fontSize": 20,
                "fontWeight": "lighter"
              },
              "height": 250,
              "width": 400,
              "data": {
                "url": "https://raw.githubusercontent.com/crcorbett/FIT3179/master/data/map/buildings.json",
                "format": {
                  "type": "topojson",
                  "feature": "polyMap"
                }
              },
              "mark": {
                "type": "geoshape",
                "color": "#eee"
              }
            },
            {
              "data": {
                "url": "https://raw.githubusercontent.com/crcorbett/FIT3179/master/data/map/parks.json",
                "format": {
                  "type": "topojson",
                  "feature": "polyMap"
                }
              },
              "mark": {
                "type": "geoshape",
                "color": "rgb(239,244,225)"
              }
            },
            {
              "data": {
                "url": "https://raw.githubusercontent.com/crcorbett/FIT3179/master/data/map/rivers.json",
                "format": {
                  "type": "topojson",
                  "feature": "lineMap"
                }
              },
              "mark": {
                "type": "geoshape",
                "color": "rgb(226,237,246)",
                "strokeWidth": 22,
                "filled": null
              }
            },
            {
              "selection": {
                "Date": {
                  "type": "single",
                  "fields": [
                    "Mdate"
                  ],
                  "init": {
                    "Mdate": 21
                  },
                  "bind": {
                    "Mdate": {
                      "input": "range",
                      "min": 1,
                      "max": 31,
                      "step": 1,
                      "name": "Day"
                    }
                  }
                },
                "Hour": {
                  "type": "single",
                  "fields": [
                    "Hour"
                  ],
                  "init": {
                    "Hour": 17
                  },
                  "bind": {
                    "Hour": {
                      "input": "range",
                      "min": 0,
                      "max": 23,
                      "step": 1,
                      "type": "nominal",
                      "name": "Hour"
                    }
                  }
                },
                "Location": {
                  "type": "multi",
                  "fields": [
                    "Location"
                  ],
                  "on": "click",
                  "empty": "all",
                  "init": {
                    "Location": [
                      "Collins Place (North)",
                      "Bourke St Bridge",
                      "Southbank",
                      "Melbourne Central",
                      "The Arts Centre",
                      "Collins St (North)"
                    ]
                  }
                }
              },
              "transform": [
                {
                  "filter": {
                    "selection": "Date"
                  }
                },
                {
                  "filter": "datum.Year == 2019"
                },
                {
                  "filter": {
                    "selection": "Hour"
                  }
                }
              ],
              "mark": {
                "type": "circle",
                "stroke": "white",
                "opacity": 1
              },
              "encoding": {
                "longitude": {
                  "field": "longitude",
                  "type": "quantitative"
                },
                "latitude": {
                  "field": "latitude",
                  "type": "quantitative"
                },
                "color": {
                  "condition": {
                    "selection": "Location",
                    "field": "Normalised",
                    "type": "quantitative",
                    "scale": {
                      "scheme": "reds",
                      "domain": [
                        0,
                        1
                      ],
                      "domainMid": 0.3
                    },
                    "legend": {
                      "orient": "right",
                      "title": [
                        "Normalised",
                        "pedestrian traffic"
                      ],
                      "titleAlign": "center"
                    }
                  },
                  "value": "grey"
                },
                "size": {
                  "condition": {
                    "selection": "Location",
                    "value": 200
                  },
                  "value": 100
                },
                "tooltip": [
                  {
                    "field": "Location"
                  },
                  {
                    "field": "Day"
                  },
                  {
                    "field": "Year"
                  },
                  {
                    "field": "Normalised"
                  },
                  {
                    "field": "Count"
                  }
                ]
              }
            },
            {
              "transform": [
                {
                  "filter": {
                    "selection": "Date"
                  }
                },
                {
                  "filter": "datum.Year == 2019"
                },
                {
                  "filter": {
                    "selection": "Hour"
                  }
                },
                {
                  "filter": {
                    "selection": "Location"
                  }
                },
                {
                  "filter": "datum.Location == 'The Arts Centre' || datum.Location == 'Melbourne Central' || datum.Location == 'Southbank' || datum.Location == 'Bourke St Bridge' || datum.Location == 'Collins St (North)' || datum.Location == 'Collins Place (North)' || datum.Location == 'Southern Cross Station' || datum.Location == 'Princes Bridge' || datum.Location == 'Melbourne Convention Exhibition Centre' || datum.Location == 'Swanston St - RMIT Building 14'"
                }
              ],
              "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "color": "black",
                "dx": 10,
                "dy": -3,
                "fontSize": 7
              },
              "encoding": {
                "text": {
                  "field": "Location",
                  "type": "nominal"
                },
                "latitude": {
                  "field": "latitude",
                  "type": "quantitative"
                },
                "longitude": {
                  "field": "longitude",
                  "type": "quantitative"
                },
                "tooltip": [
                  {
                    "field": "Location"
                  },
                  {
                    "field": "Day"
                  },
                  {
                    "field": "Year"
                  },
                  {
                    "field": "Normalised"
                  },
                  {
                    "field": "Count"
                  }
                ]
              }
            }
          ]
        },
        {
          "layer": [
            {
              "title": {
                "text": "July 2020",
                "subtitle": "",
                "fontStyle": "italic",
                "fontSize": 20,
                "fontWeight": "lighter"
              },
              "height": 250,
