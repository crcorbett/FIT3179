{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data":{
      "url":"https://raw.githubusercontent.com/crcorbett/FIT3179/master/data/ped_data.json"
    },
  "title": {"text": "Melbourne Pedestrian Traffic", "fontSize":40, "subtitle":""},
  "vconcat" :[
    {  
      "hconcat": [
    {
      "layer":[
        {
        "data": {
          "url": "https://raw.githubusercontent.com/crcorbett/FIT3179-Week-9/main/data/map.json",
          "format": {
            "type": "topojson",
            "feature": "ABS_SA2_2011"
          }
        },
        "projection": {
          "type": "equirectangular"
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        },
        "height": 400,
        "width": 400,
        "title": "July 2019"
      },
      {
        "selection": {
          "Date": {
            "type": "single",
            "fields": [
              "Mdate"
            ],
            "init": {
              "Mdate": 21
            },
            "bind": {
              "Mdate": {
                "input": "range",
                "min": 1,
                "max": 31,
                "step": 1,
                "name": "Day"
              }
            }
          },
          "Hour": {
            "type": "single",
            "fields": [
              "Hour"
            ],
            "init": {
              "Hour": 17
            },
            "bind": {
              "Hour":{
                "input": "range",
                "min": 0,
                "max": 23,
                "step":1,
                "type": "nominal",
                "name": "Hour"
              }
            }
          },
          "Location":{
            "type":"single",
            "fields":["Location"],
            "on":"click"
          }
        },
        "transform": [
          {
            "filter": {
              "selection": "Date"
            }
          },
          {
            "filter":"datum.Year == 2019"
          },
          {
            "filter": {
              "selection": "Hour"
            }
          }
        ],
        "mark": {
          "type": "circle",
          "size": 100,
          "opacity":1
        },
        "encoding": {
          "longitude": {
            "field": "longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "latitude",
            "type": "quantitative"
          },
          "color": {
            "condition":{
              "selection":"Location",
              "field":"Normalised",
              "type": "quantitative",
              "scale": {
                "scheme": "reds",
                "domain":[0,1]
              },
              "legend": {
                "orient": "right"
              }
            },
            "value":"grey"
          },
            "tooltip":[
              {"field":"Location"},
              {"field":"Mdate"},
              {"field":"Year"},
              {"field":"Normalised"},
              {"field":"Count"}
              ]
        }
      }
      ]
    },
    {
      "layer":[
      {
        "data": {
          "url": "https://raw.githubusercontent.com/crcorbett/FIT3179-Week-9/main/data/map.json",
          "format": {
            "type": "topojson",
            "feature": "ABS_SA2_2011"
          }
        },
        "projection": {
          "type": "equirectangular"
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        },
        "height": 400,
        "width": 400,
        "title": "July 2020"
      },
      {
        "selection": {
          "Location":{
            "type":"single",
            "fields":["Location"],
            "on":"click"
          }
        },
        "transform": [
          {
            "filter": {
              "selection": "Date"
            }
          },
          {
            "filter":"datum.Year == 2020"
          },
          {
            "filter": {
              "selection": "Hour"
            }
          }
        ],
        "mark": {
          "type": "circle",
          "size": 100,
          "opacity":1
        },
        "encoding": {
          "longitude": {
            "field": "longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "latitude",
            "type": "quantitative"
          },
          "color": {
            "condition":{
              "selection":"Location",
              "field":"Normalised",
              "type": "quantitative",
              "scale": {
                "scheme": "reds"
              },
              "legend": {
                "title": ["Normalised","Pedestrian Count"],
                "titleAlign":"center",
                "orient": "right"
              }
            },
            "value":"grey"
          },
            "tooltip":[
              {"field":"Location"},
              {"field":"Day"},
              {"field":"Year"},
              {"field":"Normalised"},
              {"field":"Count"}
              ]
        }
      }
      ]
    }
  ]
  },
  {
    "layer": [ 
    {
      "title":"Pedestrian count daily",
    "transform": [
      {
            "filter": {
              "selection": "Date"
            }
          },
    {
      "filter": {
        "selection": "Location"
      }
    }
  ],
    "width": 800,
    "mark": "line",
    "encoding": {
      "x":{"field":"Hour", "type": "ordinal"},
      "y":{"aggregate":"sum","field":"Count", "type": "quantitative", "axis":   {"title":"Total Pedestrians"}},
      "color":{"field":"Year"},
      "opacity":{"value":0.7}
    }
    },
    {
      "transform": [
        {
          "filter": {
            "selection": "Hour"
            }
          },
          {
            "filter": {
              "selection": "Date"
            }
          },
          {
          "filter": {
            "selection": "Location"
          }
        }
      ],
      "mark":"rule",
      "encoding": {
        "x":{"field":"Hour"},
        "color":{"value":"grey"},
        "opacity":{"value":0.5},
        "strokeDash":{"value":[4,4]}
      },
      "selection": {
        "highlighted": {
          "type": "single",
          "on": "mouseover",
          "encodings": ["x"],
          "empty": "none",
          "nearest": true
        }
      }
    },
    {
      "transform": [
        {
            "filter": {
              "selection": "Date"
            }
          },
          {
            "filter": {
              "selection": "Hour"
            }
          },
        {
          "filter": {
            "selection": "Location"
          }
        }
      ],
      "mark":"circle",
      "encoding": {
        "x":{"field":"Hour"},
        "y":{"field":"Count", "aggregate":"sum"},
        "color":{"field":"Year"},
        "size":{"value":100}
      }
    },
    {
      "transform": [
        {
            "filter": {
              "selection": "Date"
            }
          },
          {
            "filter": {
              "selection": "Hour"
            }
          },
        {
          "filter": {
            "selection": "Location"
          }
        }
      ],
      "mark":{
        "type":"text",
        "align":"left",
        "dx":10,
        "dy":-10
        },
      "encoding": {
        "x":{"field":"Hour"},
        "color":{"field":"Year"},
        "y":{"field":"Count", "aggregate":"sum"},
        "text":{"field":"Count", "aggregate":"sum"},
        "size":{"value":15}
      }
    }
    ]
  }
    
    ]
}