        },
        {
          "transform": [
            {
              "filter": {
                "selection": "Date"
              }
            },
            {
              "filter": {
                "selection": "Hour"
              }
            },
            {
              "filter": {
                "selection": "Location"
              }
            }
          ],
          "mark": {
            "type": "circle"
          },
          "encoding": {
            "x": {
              "field": "Hour",
              "type": "ordinal"
            },
            "y": {
              "field": "Count",
              "aggregate": "sum"
            },
            "color": {
              "field": "Year"
            },
            "size": {
              "value": 100
            },
            "tooltip": [
              {
                "field": "Count",
                "aggregate": "sum",
                "title": "Total Pedestrians"
              },
              {
                "field": "day_hour_mean",
                "aggregate": "mean",
