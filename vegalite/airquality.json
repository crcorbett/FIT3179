{
   "$schema":"https://vega.github.io/schema/vega-lite/v4.json",
   "title":{
      "text":"Melbourne Air Quality (SO2)",
      "fontSize":24,
      "align":"left",
      "dx":240
   },
   "facet":{
      "row":{
         "field":"Date",
         "timeUnit":"month",
         "header":{
            "labelFontStyle":"bold"
         },
         "title":"Month"
      }
   },
   "spacing":5,
   "data":{
      "url":"https://raw.githubusercontent.com/crcorbett/FIT3179/master/data/airquality_epa.json",
      "format":{
         "parse":{
            "Date":"utc:'%Y-%m-%d'"
         }
      }
   },
   "transform":[
      {
         "filter":{
            "field":"Date",
            "timeUnit":"month",
            "oneOf":[
               4,
               5,
               6
            ]
         }
      }
   ],
   "spec":{
      "layer":[
         {
            "width":{
               "step":10
            },
            "height":{
               "step":10
            },
            "mark":{
               "type":"rect"
            },
            "encoding":{
               "x":{
                  "field":"Date",
                  "timeUnit":"date",
                  "type":"ordinal",
                  "title":"Date",
                  "axis":{
                     "tickOpacity":1,
                     "tickBand":"extent"
                  }
               },
               "y":{
                  "field":"Date",
                  "timeUnit":"year",
                  "type":"ordinal",
                  "sort":[
                     {
                        "year":2019,
                        "month":4
                     },
                     {
                        "year":2020,
                        "month":4
                     },
                     {
                        "year":2019,
                        "month":5
                     },
                     {
                        "year":2020,
                        "month":5
                     },
                     {
                        "year":2019,
                        "month":6
                     },
                     {
                        "year":2020,
                        "month":6
                     }
                  ],
                  "axis":{
                     "grid":false,
                     "tickBand":"extent",
                     "tickMinStep":100,
                     "title":"",
                     "labelFontStyle":"bold"
                  }
               },
               "color":{
                  "field":"normalise",
                  "type":"quantitative",
                  "scale":{
                     "scheme":"reds",
                     "domainMid":0.2
                  },
                  "legend":{
                     "title":"2019 Rate",
                     "labelOpacity":0
                  }
               },
               "stroke":{
                  "value":"white"
               },
               "strokeOpacity":{
                  "value":0
               },
               "strokeWidth":{
                  "value":4
               },
               "opacity":{
                  "condition":{
                     "test":"datum.wday !='Saturday' && datum.wday !='Sunday'",
                     "value":1
                  },
                  "value":0.7
               }
            }
         },
         {
            "width":{
               "step":10
            },
            "height":{
               "step":10
            },
            "transform":[
               {
                  "filter":{
                     "field":"wday",
                     "oneOf":[
                        "Monday",
                        "Tuesday",
                        "Wednesday",
                        "Thursday",
                        "Friday"
                     ]
                  }
               }
            ],
            "mark":{
               "type":"text",
               "size":8
            },
            "encoding":{
               "x":{
                  "field":"Date",
                  "timeUnit":"date",
                  "type":"ordinal"
               },
               "y":{
                  "field":"Date",
                  "timeUnit":"year",
                  "type":"ordinal",
                  "sort":[
                     {
                        "year":2019,
                        "month":4
                     },
                     {
                        "year":2020,
                        "month":4
                     },
                     {
                        "year":2019,
                        "month":5
                     },
                     {
                        "year":2020,
                        "month":5
                     },
                     {
                        "year":2019,
                        "month":6
                     },
                     {
                        "year":2020,
                        "month":6
                     }
                  ]
               },
               "text":{
                  "field":"median"
               },
               "color":{
                  "condition":{
                     "test":"datum.median >= 1",
                     "value":"white"
                  },
                  "value":"black"
               },
               "opacity":{
                  "condition":{
                     "test":"datum.wday !='Saturday' && datum.wday !='Sunday'",
                     "value":1
                  },
                  "value":0.55
               }
            }
         },
         {
            "width":{
               "step":20
            },
            "height":{
               "step":20
            },
            "transform":[
               {
                  "filter":{
                     "field":"wday",
                     "oneOf":[
                        "Monday",
                        "Tuesday",
                        "Wednesday",
                        "Thursday",
                        "Friday"
                     ]
                  }
               }
            ],
            "mark":{
               "type":"rect",
               "fillOpacity":0
            },
            "encoding":{
               "x":{
                  "field":"Date",
                  "timeUnit":"date",
                  "type":"ordinal",
                  "title":"Date",
                  "axis":{
                     "tickOpacity":1,
                     "tickBand":"extent"
                  }
               },
               "y":{
                  "field":"Date",
                  "timeUnit":"year",
                  "type":"ordinal",
                  "sort":[
                     {
                        "year":2019,
                        "month":4
                     },
                     {
                        "year":2020,
                        "month":4
                     },
                     {
                        "year":2019,
                        "month":5
                     },
                     {
                        "year":2020,
                        "month":5
                     },
                     {
                        "year":2019,
                        "month":6
                     },
                     {
                        "year":2020,
                        "month":6
                     }
                  ]
               },
               "stroke":{
                  "value":"black"
               },
               "strokeOpacity":{
                  "value":1
               },
               "strokeWidth":{
                  "value":2
               }
            }
         }
      ]
   }
}