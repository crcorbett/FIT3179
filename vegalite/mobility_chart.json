{
   "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
   "width": 410,
   "height": 300,
   "title": {
      "text": "Mobility",
      "fontSize": 25,
      "align": "center",
      "dy": -10,
      "subtitle": "Change since January 14th, 2020"
   },
   "data": {
      "url": "https://raw.githubusercontent.com/crcorbett/FIT3179/master/data/melbourne_mobility_data.json",
      "format": {
         "parse": {
            "Date": "utc:'%Y-%m-%d'"
         }
      }
   },
   "layer": [
      {
         "data": {
            "url": "https://raw.githubusercontent.com/crcorbett/FIT3179/master/data/restrictions_date.json",
            "format": {
               "parse": {
                  "Start": "utc:'%Y-%m-%d'",
                  "End": "utc:'%Y-%m-%d'",
                  "Middle": "utc:'%Y-%m-%d'"
               }
            }
         },
         "transform": [
            {
               "filter": "datum.Measure != 'Second Step' && datum.Measure != 'Second Step (Extended' && datum.Measure != 'First Step'"
            }
         ],
         "mark": {
            "type": "rect",
            "opacity": 0.65
         },
         "encoding": {
            "x": {
               "field": "Start",
               "type": "temporal",
               "title": "Date",
               "axis": {
                  "tickBand": "extent",
                  "grid": true,
                  "tickCount": "month",
                  "gridWidth": 2
               }
            },
            "x2": {
               "field": "End",
               "type": "temporal"
            },
            "fill": {
               "field": "Measure",
               "type": "ordinal",
               "scale": {
                  "scheme": "reds"
               },
               "sort": [
               ],
               "legend": {
                  "title": "Restriction Measure"
               }
            },
            "tooltip": [
               {
                  "field": "Measure",
                  "title": "Lockdown measure"
               },
               {
                  "field": "Start",
                  "type": "temporal",
                  "timeUnit": "yearmonthdate",
                  "title": "Start date"
               },
               {
                  "field": "End",
                  "type": "temporal",
                  "timeUnit": "yearmonthdate",
                  "title": "End date"
               }
            ]
         }
      },
      {
         "mark": {
            "type": "line",
            "color": "white",
            "y": 92,
            "opacity": 0.9,
            "strokeWidth": 10
         },
         "encoding": {
            "x": {
               "field": "Date",
               "type": "temporal"
            },
            "y": {
               "datum": 100
            }
         }
      },
      {
         "mark": {
            "type": "line",
            "color": "slategray",
            "opacity": 1,
            "strokeWidth": 1.5
         },
         "encoding": {
            "x": {
               "field": "Date",
               "type": "temporal"
            },
            "y": {
               "datum": 100
            }
         }
      },
      {
         "mark": {
            "type": "errorband",
            "extent": "ci",
            "opacity": 0.8,
            "borders": {
               "opacity": 1,
               "strokeDash": [
                  6,
                  4
               ]
            }
         },
         "encoding": {
            "x": {
               "field": "Date",
               "type": "temporal",
               "timeUnit": "yearmonth",
               "title": "Date",
               "axis": {
                  "grid": true,
                  "format": "%b"
               }
            },
            "y": {
               "field": "Value",
               "type": "quantitative",
               "timeUnit": "month",
               "axis": {
                  "tickCount": 5,
                  "grid": false
               },
               "title": "Mobility (%)"
            },
            "color": {
               "field": "transportation_type",
               "type": "nominal",
               "scale": {
                  "range": [
                     "#a8dadc",
                     "#457b9d",
                     "#1d3557"
                  ]
               },
               "legend": {
               }
            },
            "tooltip": [
               {
                  "field": "transportation_type",
                  "type": "nominal",
                  "title": "Transport type"
               },
               {
                  "field": "Date",
                  "type": "temporal",
                  "timeUnit": "yearmonth",
                  "title": "Date"
               },
               {
                  "field": "upper_Value",
                  "type": "quantitative",
                  "format": ".1f",
                  "title": "Upper bound"
               },
               {
                  "field": "center_Value",
                  "type": "quantitative",
                  "format": ".1f",
                  "title": "Mean"
               },
               {
                  "field": "lower_Value",
                  "type": "quantitative",
                  "format": ".1f",
                  "title": "Lower bound"
               }

            ]
         }
      },
      {
         "mark": {
            "type": "line",
            "opacity": 1
         },
         "encoding": {
            "x": {
               "field": "Date",
               "type": "temporal",
               "timeUnit": "yearmonth"
            },
            "y": {
               "field": "Value",
               "type": "quantitative",
               "aggregate": "mean"
            },
            "color": {
               "field": "transportation_type",
               "type": "nominal",
               "title": "Transport Type"
            }
         }
      },
      {
         "transform": [
            {
               "filter": {
                  "field": "Date",
                  "timeUnit": "month",
                  "oneOf": [
                     "Jun",
                     "Apr",
                     "Aug"
                  ]
               }
            }
         ],
         "mark": {
            "type": "circle",
            "color": "white",
            "fillOpacity": 0.85,
            "size": 120,
            "stroke": "black"
         },
         "encoding": {
            "x": {
               "field": "Date",
               "type": "temporal",
               "timeUnit": "yearmonth"
            },
            "y": {
               "field": "Value",
               "type": "quantitative",
               "aggregate": "mean"
            },
            "detail": {
               "field": "transportation_type",
               "type": "nominal",
               "title": "Transport Type"
            },
            "tooltip": [
               {
                  "field": "transportation_type",
                  "type": "nominal",
                  "title": "Transport type"
               },
               {
                  "field": "Date",
                  "type": "temporal",
                  "timeUnit": "yearmonth",
                  "title": "Date"
               }
            ]
         }
      },
      {
         "transform": [
            {
               "filter": {
                  "field": "Date",
                  "timeUnit": "month",
                  "oneOf": [
                     "Jun",
                     "Apr",
                     "Aug"
                  ]
               }
            },
            {
               "calculate": "datum.Value / 100",
               "as": "Value_p"
            }
         ],
         "mark": {
            "type": "text",
            "fill": "white",
            "size": 10,
            "align": "left",
            "fontStyle": "bold",
            "dx": 9,
            "dy": -9
         },
         "encoding": {
            "x": {
               "field": "Date",
               "type": "temporal",
               "timeUnit": "yearmonth"
            },
            "y": {
               "field": "Value",
               "type": "quantitative",
               "aggregate": "mean"
            },
            "text": {
               "field": "Value_p",
               "type": "quantitative",
               "aggregate": "mean",
               "format": ".2p"
            },
            "detail": {
               "field": "transportation_type",
               "type": "nominal",
               "title": "Transport Type"
            }
         }
      },
      {
         "mark": {
            "type": "text",
            "align": "center",
            "color": "black"
         },
         "encoding": {
            "x": {
               "datum": {
                  "year": 2020,
                  "month": "jun",
                  "date": 4
               }
            },
            "y": {
               "datum": 105
            },
            "text": {
               "value": "Reference Date: 14/01/2020"
            }
         }
      }
   ]
}