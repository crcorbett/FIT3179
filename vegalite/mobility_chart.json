{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width":400,
  "height":400,
  "data": {
    "url": "https://raw.githubusercontent.com/crcorbett/FIT3179/master/data/melbourne_mobility_data.json"
  },
  "layer":[
    {
    "mark": {
    "type":"errorband",
    "extent": "ci",
    "borders": {
          "opacity": 0.5,
          "strokeDash": [6, 4]
        }
       },
  "encoding": {
    "x":{"field":"Date", "type":"temporal", "timeUnit":"month"},
    "y":{"field":"Value", "type": "quantitative"},
    "color":{"field":"transportation_type", "type": "nominal"}
        }
    },
    {
    "mark": {
    "type":"line",
    "color":"black",
    "opacity":0.6
       },
  "encoding": {
    "x":{"field":"Date", "type":"temporal", "timeUnit":"month"},
    "y":{"field":"Value", "type": "quantitative", "aggregate":"mean"},
    "color":{"field":"transportation_type", "type": "nominal", "title":"Transport Type"}
        }
    },
    {
    "mark": {
    "type":"line",
    "color":"black"
       },
  "encoding": {
    "y":{"value":100},
    "x":{"field":"Date", "type":"temporal", "timeUnit":"month"}
        }
    },
    {
    "mark": {
    "type":"text",
    "color":"black",
    "dy":-15
       },
  "encoding": {
    "y":{"value":100},
    "x":{"value":200, "type":"temporal", "timeUnit":"month"},
    "text":{"value":"Change since January 13th"}
        }
    }
  ]
}